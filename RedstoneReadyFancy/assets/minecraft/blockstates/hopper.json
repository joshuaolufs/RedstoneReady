{
	"multipart": [
    {"when":{"facing":"down"},
      "apply":{"model":"block/hopper/hopper"}},

		{"when":{"facing":"north"},
			"apply":{"model":"block/hopper/hopper_side", "y":0}},

		{"when":{"facing":"east"},
			"apply":{"model":"block/hopper/hopper_side", "y":90}},

    	{"when":{"facing":"south"},
			"apply":{"model":"block/hopper/hopper_side", "y":180}},

    	{"when":{"facing":"west"},
			"apply":{"model":"block/hopper/hopper_side", "y":270}},




		{"when":{"facing":"north","enabled":"true"},
			"apply":{"model":"block/hopper/arrows_side", "y":0}},
		{"when":{"facing":"north","enabled":"false"},
			"apply":{"model":"block/hopper/arrows_side", "y":0}},

		{"when":{"facing":"east","enabled":"true"},
			"apply":{"model":"block/hopper/arrows_side", "y":90}},
		{"when":{"facing":"east","enabled":"false"},
			"apply":{"model":"block/hopper/arrows_side", "y":90}},

		{"when":{"facing":"south","enabled":"true"},
			"apply":{"model":"block/hopper/arrows_side", "y":180}},
		{"when":{"facing":"south","enabled":"false"},
			"apply":{"model":"block/hopper/arrows_side", "y":180}},

		{"when":{"facing":"west","enabled":"true"},
			"apply":{"model":"block/hopper/arrows_side", "y":270}},
		{"when":{"facing":"west","enabled":"false"},
			"apply":{"model":"block/hopper/arrows_side", "y":270}},

		{"when":{"facing":"down","enabled":"true"},
			"apply":{"model":"block/hopper/arrows_down"}},
		{"when":{"facing":"down","enabled":"false"},
			"apply":{"model":"block/hopper/arrows_down"}}
		
	]
}