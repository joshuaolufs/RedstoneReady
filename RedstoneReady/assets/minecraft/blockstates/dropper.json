{
	"multipart": [
		{"when":{"facing":"north"},
			"apply":{"model":"block/dropper/dropper", "y":0}},

		{"when":{"facing":"east"},
			"apply":{"model":"block/dropper/dropper", "y":90}},

		{"when":{"facing":"south"},
			"apply":{"model":"block/dropper/dropper", "y":180}},

		{"when":{"facing":"west"},
			"apply":{"model":"block/dropper/dropper", "y":270}},

		{"when":{"facing":"up"},
			"apply":{"model":"block/dropper/dropper_vertical", "y":90}},

		{"when":{"facing":"down"},
			"apply":{"model":"block/dropper/dropper_vertical", "y":90, "x":180}},



		{"when":{"facing":"north","triggered":"true"},
			"apply":{"model":"block/dropper/arrows_on", "y":0}},
		{"when":{"facing":"north","triggered":"false"},
			"apply":{"model":"block/dropper/arrows", "y":0}},

		{"when":{"facing":"east","triggered":"true"},
			"apply":{"model":"block/dropper/arrows_on", "y":90}},
		{"when":{"facing":"east","triggered":"false"},
			"apply":{"model":"block/dropper/arrows", "y":90}},

		{"when":{"facing":"south","triggered":"true"},
			"apply":{"model":"block/dropper/arrows_on", "y":180}},
		{"when":{"facing":"south","triggered":"false"},
			"apply":{"model":"block/dropper/arrows", "y":180}},

		{"when":{"facing":"west","triggered":"true"},
			"apply":{"model":"block/dropper/arrows_on", "y":270}},
		{"when":{"facing":"west","triggered":"false"},
			"apply":{"model":"block/dropper/arrows", "y":270}},

		{"when":{"facing":"up","triggered":"true"},
			"apply":{"model":"block/dropper/vertical_on", "y":90}},
		{"when":{"facing":"up","triggered":"false"},
			"apply":{"model":"block/dropper/vertical", "y":90}},

		{"when":{"facing":"down","triggered":"true"},
			"apply":{"model":"block/dropper/vertical_on", "x":180, "y":90}},
		{"when":{"facing":"down","triggered":"false"},
			"apply":{"model":"block/dropper/vertical", "x":180, "y":90}}
		
	]
}