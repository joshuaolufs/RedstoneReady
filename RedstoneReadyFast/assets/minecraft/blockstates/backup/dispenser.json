{
	"multipart": [
		{"when":{"facing":"north"},
			"apply":{"model":"block/dispenser/dispenser", "y":0}},

		{"when":{"facing":"east"},
			"apply":{"model":"block/dispenser/dispenser", "y":90}},

		{"when":{"facing":"south"},
			"apply":{"model":"block/dispenser/dispenser", "y":180}},

		{"when":{"facing":"west"},
			"apply":{"model":"block/dispenser/dispenser", "y":270}},

		{"when":{"facing":"up"},
			"apply":{"model":"block/dispenser/dispenser_vertical", "y":90}},

		{"when":{"facing":"down"},
			"apply":{"model":"block/dispenser/dispenser_vertical", "y":90, "x":180}},



		{"when":{"facing":"north","triggered":"true"},
			"apply":{"model":"block/dispenser/arrows_on", "y":0}},
		{"when":{"facing":"north","triggered":"false"},
			"apply":{"model":"block/dispenser/arrows", "y":0}},

		{"when":{"facing":"east","triggered":"true"},
			"apply":{"model":"block/dispenser/arrows_on", "y":90}},
		{"when":{"facing":"east","triggered":"false"},
			"apply":{"model":"block/dispenser/arrows", "y":90}},

		{"when":{"facing":"south","triggered":"true"},
			"apply":{"model":"block/dispenser/arrows_on", "y":180}},
		{"when":{"facing":"south","triggered":"false"},
			"apply":{"model":"block/dispenser/arrows", "y":180}},

		{"when":{"facing":"west","triggered":"true"},
			"apply":{"model":"block/dispenser/arrows_on", "y":270}},
		{"when":{"facing":"west","triggered":"false"},
			"apply":{"model":"block/dispenser/arrows", "y":270}},

		{"when":{"facing":"up","triggered":"true"},
			"apply":{"model":"block/dispenser/arrows_on", "x":270}},
		{"when":{"facing":"up","triggered":"false"},
			"apply":{"model":"block/dispenser/arrows", "x":270}},

		{"when":{"facing":"down","triggered":"true"},
			"apply":{"model":"block/dispenser/arrows_on", "x":90}},
		{"when":{"facing":"down","triggered":"false"},
			"apply":{"model":"block/dispenser/arrows", "x":90}}
		
	]
}